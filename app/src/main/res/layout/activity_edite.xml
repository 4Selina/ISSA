<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_edit_support">

    <EditText
        android:id="@+id/edit_support_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Support Title" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="25dp"/>


    <!--  add or remove heading section-->
    <!--  add new bullet points in each heading section-->
    <LinearLayout
        android:id="@+id/layout_recipe_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heading"
            android:textStyle="bold"
            android:textSize="25dp"/>

        <LinearLayout
            android:id="@+id/layout_content_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_content_text_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Email or Links"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/button_add_content_text"
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:text="+" />

            <Button
                android:id="@+id/button_del_content_text"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_add_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="25dp"
                android:layout_marginStart="100dp"/>

            <Button
                android:id="@+id/button_del_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="25dp"
                android:layout_marginStart="20dp" />
        </LinearLayout>

    </LinearLayout>


    <EditText
        android:id="@+id/bottom_support_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bottom Text"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/button_edit_support_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="center"/>

</LinearLayout>
