<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/atSelect"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:hint="@string/select"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        tools:ignore="MissingConstraints">

        <AutoCompleteTextView
            android:id="@+id/aut_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txtContentId"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/atSelect"
        android:text="ID:" />

    <EditText
        android:id="@+id/edtContentId"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/atSelect"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="7dp"
        android:hint="0" />

    <TextView
        android:id="@+id/txtContentTitle"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:text="Heading:"
        android:layout_below="@+id/txtContentId" />

    <EditText
        android:id="@+id/edtContentTitle"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_below="@+id/txtContentId"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-4dp"
        android:hint="Heading" />

    <TextView
        android:id="@+id/txtContentImage"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:text="ImageUrl:"
        android:layout_below="@+id/txtContentTitle" />

    <EditText
        android:id="@+id/edtImageURL"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_below="@+id/txtContentTitle"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="4dp"
        android:hint="Enter image URL" />

    <TextView
        android:id="@+id/txtContentDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtImageURL"
        android:layout_marginStart="30dp"
        android:layout_marginTop="9dp"
        android:text="Description" />

    <EditText
        android:id="@+id/edtContentDetails"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@+id/txtContentDetails"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="7dp"
        android:hint="Enter description" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtContentDetails"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:text="Ok" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtContentDetails"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="21dp"
        android:text="Cancel" />

</RelativeLayout>
