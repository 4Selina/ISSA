<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:id="@+id/view_update_web_inform">

    <EditText
        android:id="@+id/dialog_department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new contents"
        android:textSize="21dp"
        android:textStyle="bold"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"/>

    <EditText
        android:id="@+id/dialog_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter email"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textColor="@color/purple_700"
        android:layout_marginBottom="8sp"/>

    <EditText
        android:id="@+id/dialog_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter contact number"
        android:textSize="20dp"
        android:layout_marginBottom="8sp"/>

    <EditText
        android:id="@+id/dialog_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter address"
        android:textSize="20dp"
        android:layout_marginBottom="8sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_add"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="24sp"
            android:contentDescription="Add detail" />

        <Button
            android:id="@+id/dialog_remove"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="24sp"
            android:contentDescription="Remove detail" />
    </LinearLayout>
</LinearLayout>
