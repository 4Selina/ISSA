<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:background="@color/background"
    android:layout_margin="8sp"
    android:id="@+id/supportCard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Picture on the left -->
        <ImageView
            android:id="@+id/support_image_view"
            android:layout_width="140sp"
            android:layout_height="120sp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:src="@drawable/jobsupport"/>

        <!-- Title -->
        <TextView
            android:id="@+id/txt_support_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/support_image_view"
            android:layout_marginStart="16sp"
            android:textSize="20sp"
            android:text="Sub Function"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16sp"/>

        <!-- Short description -->
        <TextView
            android:id="@+id/txt_support_description"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_below="@+id/txt_support_title"
            android:layout_toEndOf="@id/support_image_view"
            android:layout_marginTop="8sp"
            android:layout_marginStart="16sp"
            android:text="Description, links, emails"
            android:textSize="18sp"
            android:layout_marginBottom="16sp"/>

        <!-- Edit icon -->
        <ImageView
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:layout_below="@+id/txt_support_description"
            android:layout_toEndOf="@id/support_image_view"
            android:layout_marginTop="1sp"
            android:layout_marginStart="16sp"
            android:background="@color/teal_700"
            />
        <!-- Delete icon -->
        <ImageView
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete"
            android:layout_below="@+id/txt_support_description"
            android:layout_toEndOf="@id/edit_button"
            android:layout_marginTop="1sp"
            android:layout_marginStart="16sp"
            android:background="@color/teal_700"/>

    </RelativeLayout>

</LinearLayout>
