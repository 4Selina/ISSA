<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/dialog_update_webpage">

    <TextView
        android:id="@+id/dialog_webContents_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Contents"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dialog_edit_webContents_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new contents"
        android:textSize="20dp" />

    <Button
        android:id="@+id/dialog_btn_save_webChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="16dp" />
    <Button
        android:id="@+id/dialog_btn_cancel_webChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="16dp" />
</LinearLayout>
